{
    "manifest_version": 3,
    "name": "BlockSafe",
    "version": "1.0",
    "description": "Real-time Web3 Security Scanner",
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "webRequest",
      "webRequestBlocking"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "128": "icons/icon128.png"
    }
  }
  